<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:elasticsearch="http://www.pilato.fr/schema/elasticsearch"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd
	http://www.pilato.fr/schema/elasticsearch 
	http://www.pilato.fr/schema/elasticsearch/elasticsearch-0.1.xsd">
 

  <context:annotation-config />

  <context:component-scan base-package="com.clearboxmedia.srs.couch" />
  <context:component-scan base-package="com.clearboxmedia.srs.rest" />
  <context:component-scan base-package="com.clearboxmedia.srs.rest.polling" />
  <context:component-scan base-package="com.clearboxmedia.srs.json" />

  <bean id="eventbriteConfig" class="com.clearboxmedia.srs.providers.eventbrite.config.EventbriteConfig">
    <property name="appKey" value="I4TP26KOIL27JGBHO2" />
    <property name="apiUrl" value="https://www.eventbrite.com/json/event_search?app_key={appKey}{query}" />
    <property name="locationCriteria">
      <list>
        <value>Tucson, AZ</value>
        <value>Phoenix, AZ</value>
      </list>
    </property>
  </bean>

  <bean id="eventfulConfig" class="com.clearboxmedia.srs.providers.eventful.config.EventfulConfig">
    <property name="appKey" value="Z7CBx2W2kgJXQM2X" />
    <property name="apiUrl" value="http://api.eventful.com/rest/events/search?app_key={appKey}{query}" />
    <property name="locationCriteria">
      <list>
        <value>Tucson, AZ</value>
        <value>Phoenix, AZ</value>
      </list>
    </property>
  </bean>
  
  <bean id="eventbriteObjectMapper" class="com.clearboxmedia.srs.providers.eventbrite.config.ObjectMapper" />
  
  <bean id="restTemplate" class="org.springframework.web.client.RestTemplate">
    <property name="messageConverters">
      <list>
        <bean class="org.springframework.http.converter.json.MappingJacksonHttpMessageConverter">
          <!--
          <property name="objectMapper" ref="eventbriteObjectMapper" />
          -->
        </bean>
        <bean class="org.springframework.http.converter.xml.SourceHttpMessageConverter"/>
      </list>
    </property>
  </bean>
  <elasticsearch:client id="esClient" esNodes="localhost:9300"
		settingsFile="es/syncrswim/esclient-transport.properties" />

     
  

</beans>